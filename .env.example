# ⚡ APEX - Arquivo de Configuração
# Copie este arquivo para .env e configure seus valores

# ==============================
# PERPLEXITY AI INTEGRATION
# ==============================
# Obtenha sua chave em https://www.perplexity.ai/api
PERPLEXITY_API_KEY=seu_perplexity_api_key_aqui

# Modelo de Perplexity (pplx-70b-online para busca web)
PERPLEXITY_MODEL=pplx-70b-online

# ==============================
# FLASK CONFIGURATION
# ==============================
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_ENV=development
FLASK_DEBUG=True

# Dashboard
DASHBOARD_PORT=5001
DASHBOARD_HOST=0.0.0.0

# ==============================
# DATABASE CONFIGURATION
# ==============================
# Caminho do banco de dados SQLite
DATABASE_PATH=apex_memory.db

# ==============================
# AUDIO CONFIGURATION
# ==============================
# Duração de gravação de áudio (segundos)
AUDIO_DURATION=5

# Taxa de amostragem de áudio
AUDIO_SAMPLE_RATE=44100

# ==============================
# WHISPER CONFIGURATION
# ==============================
# Modelo do Whisper (tiny, base, small, medium, large)
WHISPER_MODEL=tiny

# Idioma padrão
WHISPER_LANGUAGE=pt

# ==============================
# LOGGING CONFIGURATION
# ==============================
# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Arquivo de log
LOG_FILE=apex.log

# ==============================
# CACHE CONFIGURATION
# ==============================
# Tempo de cache em segundos
CACHE_TTL=3600

# ==============================
# RATE LIMITING
# ==============================
# Limite de requisições por minuto
RATE_LIMIT=60

# ==============================
# WEBHOOK (OPCIONAL)
# ==============================
# URL para webhook de eventos
WEBHOOK_URL=

# ==============================
# FEATURES FLAGS
# ==============================
# Ativar busca web
ENABLE_WEB_SEARCH=true

# Ativar interface de voz
ENABLE_VOICE=true

# Ativar dashboard
ENABLE_DASHBOARD=true


# ==== POWER BI CONFIGURATION ====
POWERBI_CLIENT_ID=your_powerbi_client_id
POWERBI_CLIENT_SECRET=your_powerbi_client_secret
POWERBI_TENANT_ID=your_azure_tenant_id

# ==== REDIS CACHE CONFIGURATION ====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ==== OAUTH AUTHENTICATION ====
OAUTH_CLIENT_ID=your_oauth_id
OAUTH_CLIENT_SECRET=your_oauth_secret

# ==== DATABASE CONFIGURATION ====
DATABASE_URL=sqlite:///apex.db

# ==== ASYNC SETTINGS ====
MAX_WORKERS=4
TIMEOUT_SECONDS=30
